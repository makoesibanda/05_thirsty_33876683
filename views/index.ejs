<!doctype html>
<html>
  <head>
    <title>Welcome to <%= shopName %></title>
    <!-- External stylesheet for consistent site styling -->
    <link rel="stylesheet" href="/css/style.css">
  </head>

  <body>
    <!-- Page heading displaying the dynamic shop name -->
    <h1><%= shopName %></h1>

    <!-- Short introduction or subheading -->
    <h2>Here are some things that we sell:</h2>

    <!-- Dynamically generate a list of product categories -->
    <ul>
      <% for (let i = 0; i < productCategories.length; i++) { %>
        <li><%= productCategories[i] %></li>
      <% } %>
    </ul>
  </body>
</html>
